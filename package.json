{
  "name": "react-form",
  "description": "Build react safe forms as fast as possible",
  "version": "1.0.0",
  "main": "lib/index.js",
  "author": "Quentin AUBERT",
  "license": "MIT",
  "scripts": {
    "build:lib": "babel src --extensions \".ts,.js\" --out-dir lib",
    "build:types": "tsc --declaration --emitDeclarationOnly ",
    "bundle": "cross-env NODE_ENV=production webpack --color --progress",
    "build": "yarn bundle && yarn build:lib && yarn build:types",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "./test-setup.js"
    ],
    "roots": [
      "test"
    ],
    "testRegex": "\\.spec.js$",
    "testPathIgnorePatterns": [
      "helpers\\.js",
      "\\.eslintrc\\.js",
      "types\\.ts"
    ]
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-bind": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.0.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.15.0",
    "babel-loader": "8.2.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "5.0.1",
    "css-loader": "5.2.0",
    "dirty-chai": "^2.0.1",
    "jest": "^27.0.6",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "style-loader": "2.0.0",
    "transform-loader": "0.2.4",
    "ts-loader": "9.2.5",
    "webpack": "5.30.0",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "4.0.0-beta.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@hookform/resolvers": "2.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "ace-builds": "1.4.12",
    "antd": "4.15.4",
    "bootstrap": "5.0.0",
    "classnames": "2.3.0",
    "highlight.js": "11.2.0",
    "moment": "2.29.1",
    "react-ace": "9.4.3",
    "react-feather": "2.0.9",
    "react-hook-form": "7.5.2",
    "react-rainbow-components": "1.26.0",
    "react-select": "4.3.1",
    "react-tooltip": "4.2.21",
    "showdown": "1.9.1",
    "typescript": "^4.3.5",
    "uuid": "8.3.2",
    "yup": "0.32.9"
  }
}